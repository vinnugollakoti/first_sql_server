generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id                Int @id @default(autoincrement())
  fullName          String
  email             String @unique
  phone             String
  college           String
  year              String
  createdAt         DateTime  @default(now())
}


